<Window x:Class="LightweightDebuggerDemo.DebugWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="DebugWindow" Height="300" Width="300" Closed="Window_Closed" Loaded="Window_Loaded" Closing="Window_Closing">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Menu>
            <MenuItem Header="Step">
                <MenuItem Header="Step In" x:Name="mnuStepIn"></MenuItem>
                <MenuItem Header="Step Over"></MenuItem>
                <MenuItem Header="Step Out"></MenuItem>
            </MenuItem>
            
        </Menu>

        <RichTextBox Grid.Row="1" Name="rtbSource" FontFamily="Consolas" FontSize="14" Background="Black" Foreground="White" IsReadOnly="True"></RichTextBox>

    </Grid>
</Window>
